{
  "manifest_version": 3,
  "name": "Embyfin Kiosk",
  "version": "1.0.0",
  "description": "Play Emby/Jellyfin videos in external player (mpv/VLC) via local server",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "host_permissions": [
    "http://localhost/*",
    "http://127.0.0.1/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "Embyfin Kiosk"
  },
  "icons": {
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "embyfin-kiosk@jamesvasile.com",
      "strict_min_version": "121.0"
    }
  }
}
